{{define "body"}}

<div class="mdl-grid">

<div class="mdl-cell mdl-cell--11-col">


    <!-- Wide card with share menu button -->
    <style>
.demo-card-wide.mdl-card {
  float:left;
  width: 512px;
  margin:10px;
}
.demo-card-wide > .mdl-card__title {
  color: #fff;
  height: 176px;
}
.demo-card-wide > .mdl-card__menu {
  color: #fff;
}
    </style>
{{range .}}
<div class="demo-card-wide mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title" style="background: url('/file/{{.Key.StringID}}') center / cover;">
    <h2 class="mdl-card__title-text">{{.Title}}</h2>
</div>
<div class="mdl-card__supporting-text">
{{.SubTitle}}
</div>
<div class="mdl-card__actions mdl-card--border">
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="/admin/article/edit/{{.Key.StringID}">
EDIT
</a>
</div>
<div class="mdl-card__menu">
<button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
<i class="material-icons">share</i>
</button>
</div>
</div>
{{end}}


</div>

<div class="mdl-cell mdl-cell--1-col">

<button id="addBtn" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
<i class="material-icons">add</i>
</button>

<form method="post" action="/admin/article/create" enctype="multipart/form-data" style="display:none;">
<input type="file" name="file" id="file" value="" />
</form>

</div>

</div>

<script src="/static/js/jquery.min.js"></script>

<script>
$("#addBtn").click(function() {
    $("#file").click();
    return false;
});

$("#file").change(function() {
    $(this).closest("form").submit();
    return false;
});
</script>

{{end}}
